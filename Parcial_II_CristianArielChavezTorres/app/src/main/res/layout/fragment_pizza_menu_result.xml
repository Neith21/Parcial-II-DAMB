<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_pizza_menu_result">

    <!-- Imagen de la Pizza -->
    <ImageView
        android:id="@+id/pizza_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Pizza Image"
        android:scaleType="centerCrop"
        android:src="@drawable/coastalpizza"
        app:layout_constraintBottom_toTopOf="@+id/pizza_name"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nombre de la Pizza -->
    <TextView
        android:id="@+id/pizza_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pizza Super Personal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/pizza_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Detalles de la Pizza -->
    <TextView
        android:id="@+id/pizza_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deliciosa pizza con ingredientes frescos y el mejor sabor."
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/pizza_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:padding="16dp" />

    <!-- Precio de la Pizza -->
    <TextView
        android:id="@+id/pizza_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desde: $6.99"
        android:textSize="18sp"
        android:textColor="#FF5722"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/pizza_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

